<div id="dishes" class="transitions-enabled">
  <% @dishes.each.current_user do |dish| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(dish.image.url(:medium)), dish %>
      <div class="panel-body">
        <h4><%= dish.name %></h4>
        <%= dish.description %></br>
        <i><%= dish.meal %></i>
        <b><%= dish.user.email %></b>
          <% if dish.user == current_user %>
            <div class="actions">
              <%= link_to 'Edit', edit_dish_path(dish) %>
              <%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
</br>